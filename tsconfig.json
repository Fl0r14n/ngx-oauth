{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
    "types": [
      "jasmine",
      "node",
      "core-js",
      "rx",
      "webpack"
    ]
  },
  "exclude": [
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
